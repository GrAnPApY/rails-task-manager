<h1>
  <%= @task.title  %>
</h1>

<p>
  <%= @task.details %>
</p>

<p>
  <%# <%= @task.completed  %> 
  <% if @task.completed == true %>
   <%= "Done" %>
  <% else  %>
    <%= "Not done" %>
  <% end  %>
</p>

<%= link_to "Edit", edit_task_path(@task), class: "link" %>
<%= link_to("Back to tasks", tasks_path, class: "link") %>
<%= link_to("Delete", task_path(@task), method: :delete, class: "link") %>

